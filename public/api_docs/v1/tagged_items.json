          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "Inventory Item Id",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 304,
              "message": "The content has not changed in relation to the request ETag / If-Modified-Since"
