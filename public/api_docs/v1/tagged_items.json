  "resourcePath": "/inventory_items",
  "models": {
    "InventoryItem": {
      "id": "InventoryItem",
      "required": [
        "address_id",
        "price",
        "title"
      ],
      "properties": {
        "address_id": {
          "type": "integer",
          "description": "ID of the location where the inventory item is sold."
        },
        "price": {
          "type": "double",
          "description": "Price of the inventory item."
        },
        "title": {
          "type": "string",
          "description": "Name of the inventory item."
        }
      },
      "description": "An inventory item."
    }
  }
}
